{
  "name": "bifrost",
  "version": "1.0.0-SNAPSHOT",
  "author": "xrobert",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "test": "ng test",
    "e2e": "ng e2e",
    "e2e:watch": "watch \"ng e2e -s false\" src e2e --wait=1",
    "build": "npm run client:build && npm run server:build",
    "copy:resources": "copyfiles ./src/server/app/**/* dist/ -u 1 -e './src/server/app/**/*.ts'",
    "client:lint": "ng run bifrost-client:lint --fix",
    "client:server:build": "ng run bifrost-client:server:production",
    "client:browser:build": "ng run bifrost-client:build:production",
    "client:build": "npm run client:browser:build && npm run client:server:build",
    "server:lint": "tslint --project tsconfig.server.json --fix",
    "server:build": "./node_modules/.bin/tsc -p tsconfig.server.json && npm run copy:resources",
    "server:start": "node -r ./tsconfig-paths.server.bootstrap.js ./dist/server/app/main.js",
    "server:test:unit": "node_modules/.bin/jest --colors --config=./jest.config.js --runInBand --coverage",
    "server:test:e2e": "node_modules/.bin/jest --colors --config=./jest-e2e.config.js --runInBand --coverage",
    "server:test": "node_modules/.bin/jest --colors --config=./jest-global.config.js --runInBand --coverage",
    "server:coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/cdk": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/flex-layout": "^6.0.0-beta.17",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/platform-server": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@asi-ngtools/lib": "^6.0.14",
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/passport": "^1.1.0",
    "@nestjs/swagger": "^2.2.0",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@ngx-translate/core": "^10.0.2",
    "@ngx-translate/http-loader": "^3.0.1",
    "bluebird": "^3.5.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.4",
    "fastify-formbody": "^2.0.0",
    "http-proxy-middleware": "^0.18.0",
    "http-status-codes": "^1.3.0",
    "json-override": "^0.2.0",
    "lodash": "^4.17.5",
    "moment": "^2.22.2",
    "mustache": "^3.0.1",
    "node-docker-api": "^1.1.22",
    "node-json-db": "^0.9.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "raven-js": "^3.26.4",
    "reflect-metadata": "^0.1.12",
    "shelljs": "^0.8.3",
    "shortid": "^2.2.12",
    "typeorm": "^0.2.7",
    "typescript": "^2.7.2",
    "url-join": "^4.0.0",
    "winston": "^3.0.0",
    "zone.js": "^0.8.26",
    "tsconfig-paths": "^3.1.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@fortawesome/fontawesome-free": "^5.2.0",
    "@nestjs/testing": "^5.0.0",
    "@types/bluebird": "^3.5.10",
    "@types/express": "^4.0.39",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^21.1.8",
    "@types/lodash": "^4.14.102",
    "@types/node": "^10.12.18",
    "@types/shortid": "0.0.29",
    "@types/supertest": "^2.0.4",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "codelyzer": "~4.2.1",
    "copyfiles": "^2.1.0",
    "coveralls": "^3.0.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^21.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "protractor": "~5.3.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "~5.0.1",
    "tsconfig-paths-jest": "0.0.1",
    "tslint": "~5.9.1",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": "src/server/app.*spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
